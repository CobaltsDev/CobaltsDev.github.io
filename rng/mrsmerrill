        <script>
            var names = ["Jazmine", "Kamora", "Yandell", "Aaliyah", "Belen", "Ruby", "Alex", "Anthony", "Jose", "Marissa", "Sidney", "La\'Darius", "Mariah", "Damian", "Juan", "Santiago", "Joseph", "Nicolas", "Octavio", "Whitney", "Leslie", "Brayden", "Paulina", "Aaleayh", "Alison", "Eddy", "Victor", "Jeremy"];
            $("#button").onClick(myFunction);
            function myFunction() {
                var x = Math.floor((Math.random() * 27) + 1);
                $("#output").html("<p>" + names[x] + "</p>").slideDown();
            }
            mdc.ripple.MDCRipple.attachTo(document.querySelector('.mdc-button'));
        </script>
